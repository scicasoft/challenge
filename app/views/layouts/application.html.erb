<!DOCTYPE html>
<html>
<head>
  <title>Challenges</title>
  <%= stylesheet_link_tag 'application' %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id='tete'>
    <div id='tete_content'>
      <table border='0' width='100%'>
        <tr>
        <td><span style='font-size:20px;'><%= link_to 'Challenges', root_path %></span></td>
          <td style='text-align:right'>
              <% if user_signed_in? %>
                <%= "#{current_user.email} (#{pluralize(current_user.points, 'point', 'points')})" %> | <%= link_to raw('modifier'), "/users/edit" %> | <%= link_to raw('se d&eacute;connecter'), "/users/sign_out" %>
              <% else %>
                <%= link_to raw('se connecter'), "/users/sign_in" %> | <%= link_to raw("s'inscrire"), "/users/sign_up" %>
              <% end%>
          </td>
        </tr>
      </table>
    </div>
  </div>
  
  <div id='corps'>
    <div id='corps_content'>
      <div id='chemin'><%=raw flash[:chemin] %></div>
      <%= yield %>
    </div>
  </div>

<script type="text/javascript">

  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-19175637-5']);
  _gaq.push(['_setDomainName', '.scicasoft.com']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();

</script>
</body>
</html>
